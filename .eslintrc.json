{
    "extends": [
        "eslint:recommended"
    ],    
    "env": {
        "es6": true,   
        "node": true, 
        "browser": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
            "no-alert": 0,
            "no-bitwise": 0,
            "camelcase": 1,
            "curly": 1,
            "eqeqeq": 0,
            "no-eq-null": 0,
            "guard-for-in": 1,
            "no-empty": 1
    }
}